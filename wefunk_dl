#    pass

def main():
    """ The so-called "main" function
    """
    logger.debug("wanted data: {}".format(arguments.plid))
    show_id = arguments.plid[0]
    download_show(show_id)


if __name__ == "__main__":
    arguments = parse_arguments()
    # manage verbose stuff
    verbose = 0 if arguments.verbose is None else sum(arguments.verbose)
    logger = create_logger(verbose)
    main()

